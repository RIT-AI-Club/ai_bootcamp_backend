# AI Bootcamp Backend - Production Environment Configuration
# Copy this file to .env.production and fill in your values

# ===== REQUIRED CONFIGURATION =====

# Google Cloud Project Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1
SERVICE_NAME=aibc-auth-service

# Database Configuration (Cloud SQL or external PostgreSQL)
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://aibc_admin:CHANGE_ME@/aibc_db?host=/cloudsql/PROJECT:REGION:INSTANCE&sslmode=disable

# JWT Secret Keys (MUST BE CHANGED - Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_REFRESH_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
SESSION_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32

# ===== OPTIONAL CONFIGURATION =====

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Google OAuth (Optional - leave empty if not using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Cloud Run Scaling Configuration
MIN_INSTANCES=1
MAX_INSTANCES=10
CPU=1
MEMORY=512Mi

# Allow public access (set to false to require authentication)
ALLOW_UNAUTHENTICATED=true
